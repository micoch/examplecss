@import url('http://fonts.googleapis.com/css?family=Montserrat')
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,700');
@require 'partials/reset.style-master/index.styl'

use_reset('meyer')

reset('all')
/*  Universal styles */
*
	font-size 1.2rem !important
	font-family 'Source Sans Pro' !important
*, *:before, *:after
	box-sizing border-box
	
/* basic styles */
div, article, section, aside
	padding 10px

.separator:after
		content ""
		display block
		height 2px
		width 50%
		margin 0 auto
		margin-top 25px 
		background-color grey

.container
	width 75%
	max-width 1200px
	margin 0 auto
.centered
	text-align center
.middle
	display flex
	align-items center
/* Grid Rules */

.row
	zoom 1
	&:after
		clear both
.row:before, .row:after
	content ""
	display table

.column
	float left
	padding-left 1rem
	padding-right 1rem
.column.full
	width 100%
.column.three-fourths
	width 75%
.column.two-thirds
	width 66.7%
.column.half
	width 50%
.column.one-third
	width 33.3%
.column.one-fourth
	width 25%
.column.pull
	float right 


/* Navigation */

@require 'partials/navigation.styl'

/* Typography */

@require 'partials/typography.styl'

/* Froms */

@require 'partials/form.styl'
	
