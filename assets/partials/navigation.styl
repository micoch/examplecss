a
	color blue
	text-decoration none
a:active, a:hover
	outline none
a:visited
	color lightness(blue, 80%)
ul li
	list-style none
	& a
		color blue
.nav-with-hover
	color lightgrey
	&:hover 
		color grey
.justified-center
	display flex
	justify-content center
	& ul
		display flex
		& a
			padding 1rem 2rem
.justified-full-width
	& ul
		display flex
		width 100%
		& li
			flex 1 1 100%
.footer-links
	width 100%
	& li
		& a
			font-size .9rem !important
			color blue
			margin 3px 5px